---
// Pagination component for Astro, using Tailwind CSS
const { currentPage, totalPages } = Astro.props;
---

<nav>
  <ul style="display: flex; gap: 0.5rem; justify-content: center; margin-top: 2rem;">
    {Array.from({ length: totalPages }).map((_, i) => (
      <li>
        <a href={`/blog/${i + 1}`}
           style={`padding: 0.5rem 1rem; border: 1px solid #ccc; border-radius: 4px; text-decoration: none;${currentPage === i + 1 ? ' background: #2563eb; color: #fff;' : ' color: #555; background: #fff;'}`}
        >
          {i + 1}
        </a>
      </li>
    ))}
  </ul>
</nav>
