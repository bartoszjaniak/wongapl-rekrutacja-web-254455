---
// Pagination component for Astro, using Tailwind CSS
const { currentPage, totalPages } = Astro.props;
---

<nav class="flex justify-center mt-8">
  <ul class="inline-flex -space-x-px text-base h-10">
    <li>
      <a href={currentPage > 1 ? `/blog/${currentPage - 1}` : '#'} class={`flex items-center justify-center px-4 h-10 ms-0 leading-tight ${currentPage === 1 ? 'text-gray-400 pointer-events-none' : 'text-gray-500 hover:text-gray-700'} bg-white border border-e-0 border-gray-300 rounded-s-lg`}>Poprzednia</a>
    </li>
    {Array.from({ length: totalPages }).map((_, i) => (
      <li>
        <a href={`/blog/${i + 1}`} class={`flex items-center justify-center px-4 h-10 leading-tight ${currentPage === i + 1 ? 'text-white bg-blue-600' : 'text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-700'} border border-gray-300`}>{i + 1}</a>
      </li>
    ))}
    <li>
      <a href={currentPage < totalPages ? `/blog/${currentPage + 1}` : '#'} class={`flex items-center justify-center px-4 h-10 leading-tight ${currentPage === totalPages ? 'text-gray-400 pointer-events-none' : 'text-gray-500 hover:text-gray-700'} bg-white border border-gray-300 rounded-e-lg`}>NastÄ™pna</a>
    </li>
  </ul>
</nav>
